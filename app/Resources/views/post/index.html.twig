{% extends 'base.html.twig' %}

{% block title %}Blog&Post! - Posts {% endblock %}

{% block body %}

    <div class="notes-container">
        <h2 class="notes-header">Posts</h2>


        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

            <div><a href="new"><i class="fa fa-plus plus-btn"></i></a></div>
        {% else %}

            <div><a href="/login"><i class="fa fa-plus plus-btn"></i></a></div>
        {% endif %}


    </div>


    <section id="cd-timeline">
        {% for post in posts %}
            <div class="cd-timeline-block">
                <div class="cd-timeline-img">
                    <img src="{{ asset('images/P.png') }}" class="img-circle" alt="Leanna!">
                </div>
                <div class="cd-timeline-content">
                    <h2><a href="{{ post.id }}">{{ post.title }}</a></h2>
                    <p>{{ post.text }}</p>
                    <h6>by {{ post.user }}</h6>
                    <span class="cd-date">{% if post.date %}{{ post.date|date('d-m-Y') }}{% endif %}</span>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}
